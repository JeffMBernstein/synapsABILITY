<%= form_for @user do |f| %>
<div>
  <%= f.label :username %>
  <%= f.text_field :username, class: 'txtfield' %>
</div>
<div>
  <%= f.label :first_name %>
  <%= f.text_field :first_name, class: 'txtfield' %>
</div>
<div>
  <%= f.label :last_name %>
  <%= f.text_field :last_name, class: 'txtfield' %>
</div>
<div>
	<%= f.label :email %>
	<%= f.email_field :email, class: 'txtfield' %>
</div>
<div>
	<%= f.label :password %>
	<%= f.password_field :password, class: 'txtfield' %>
</div>
<div>
	<center><%= f.submit "Create", users_path, class: "btn btn-success" %></center>
</div>
<% end %>